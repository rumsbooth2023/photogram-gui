<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src = "<%= @the_photo_id.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <p><%= @the_photo_id.caption%></p>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @the_photo_id.poster.username%>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= @the_photo_id.created_at%>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/update_photo/<%= @the_photo_id.id %>">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value="<%= @the_photo_id.image %>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."><%= @the_photo_id.caption %></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo_id.id %>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <th>Commenter</th>
  <th>Comment</th>
  <th>Posted</th>
  
  <% @the_photo_id.comments.each do |a_thing| %>
  <tr>
    <td><%= a_thing.commenter.username %></td>
    <td><%= a_thing.body %></td>
    <td><%= a_thing.created_at %></td>
  </tr>
  <% end %>
  </table>

  <h3>Add a new comment</h3>

  <form action="/insert_comment_record">
  <label for="browser_photo_id">Photo ID</label>
  <input id="browser_photo_id" type="text" value="785" name="input_photo_id">

  <label for="browser_author_id">Author ID</label>
  <input id="browser_author_id" type="text" name="input_author_id">

  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="input_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
